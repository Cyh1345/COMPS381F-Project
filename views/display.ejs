<!DOCTYPE html>
<html lang="en">
<head>
    <title>Display item list</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <link rel="stylesheet" href="/public/assets/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="/public/assets/css/magnific-popup.css" type="text/css" />
    <link rel="stylesheet" href="/public/assets/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="/public/assets/css/templatemo-style.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#table_data").DataTable({
                "searching": false,
                "pageLength": '12',
                "lengthChange": false,
                "info": false
            });       
        })
	</script>
</head>
<body>
    <section class="preloader">
        <div class="spinner">
            <span class="spinner-rotate"></span>
        </div>
    </section>


    <!-- HEADER -->
    <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <a class="navbar-brand" href="/home">Home</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-nav-first">
                    <li><a href="/createitem" class="smoothScroll">Insert item</a></li>
                    <li><a href="/find" class="smoothScroll">Search item</a></li>
                    <li><a href="/list" class="smoothScroll">List item</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="section-btn"><a href="/logout">Logout</a></li>
                </ul>
           </div>
        </div>
    </section>

    <section id="home" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">

                <div class="col-md-6 col-sm-12">
                     <div class="home-info">
                          <h1>Item List</h1>                              
                     </div>
                </div>                                      
           </div>
        </div>
    </section>    
    
    <script src="/public/assets/js/jquery.js"></script>
    <script src="/public/assets/js/bootstrap.min.js"></script>
    <script src="/public/assets/js/jquery.stellar.min.js"></script>
    <script src="/public/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="/public/assets/js/smoothscroll.js"></script>
    <script src="/public/assets/js/custom.js"></script>

    <table id="table_data" class="display">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Item Name</th>
                <th>Type</th>
                <th>Quantity</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for (var i of items) { %>
                <tr>
                    <td><%= i.itemID %></td>
                    <td><% if (typeof (i.itemname) !== "undefined") { %><%= i.itemname %><% } %></td>
                    <td><% if (typeof (i.type) !== "undefined") { %><%= i.type %><% } %></td>
                    <td><% if (typeof (i.quantity) !== "undefined") { %><%= i.quantity %><% } %></td>
                    <td><a href="/edit?_id=<%= i._id %>" >Edit</a></td>
                    <td><a href="/delete?_id=<%= i._id %>&ownerID=<%=i.ownerID%>">Delete</a></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

</body>
</html>
